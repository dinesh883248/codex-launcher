{{ define "content" }}
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8"/>
<meta http-equiv="refresh" content="3"/>
<style>
body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    font-size: 14px;
    line-height: 1.6;
    padding: 10px;
    margin: 0;
}
pre {
    background: #f5f5f5;
    padding: 10px;
    overflow-x: auto;
    border-radius: 4px;
}
code {
    background: #f5f5f5;
    padding: 2px 4px;
    border-radius: 2px;
}
</style>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>
<body>
<div id="content"></div>
<script>
const lines = [
{{ range .Lines }}`{{ . }}`,
{{ end }}
];
const markdown = lines.join('\n\n');
document.getElementById('content').innerHTML = marked.parse(markdown);
</script>
</body>
</html>
{{ end }}
